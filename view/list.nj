{% extends 'layout.nj' %}

{% block head %}
<link rel="stylesheet" type="text/css" href="/assets/css/list.css">
{% endblock %}

{% block body %}
<div id="blog-list">
  <h1>博客列表</h1>

  {% if blogs.length %}
  <ul>
    {% for blog in blogs %}
    <li>
      <a class="title" href="/blog/{{blog.name}}">{{blog.title}}</a>
      <span class="date">{{blog.date}}</span>
    </li>
    {% endfor %}
  </ul>
  {% else %}
  <div class="empty-blogs">没有博客 :-(</div>
  {% endif %}

</div>
{% endblock %}

